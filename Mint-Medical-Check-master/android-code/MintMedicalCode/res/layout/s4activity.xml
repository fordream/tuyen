<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
     >
     
    <vnp.mr.mintmedical.HeaderView
        android:id="@+id/activitymain_headerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >
    </vnp.mr.mintmedical.HeaderView>
    
    <LinearLayout
        android:id="@+id/s4first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/s4first1"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/s4_text1"
                android:paddingBottom="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Youhavenoupcomingappointments"
                android:textColor="#333333"
                android:textStyle="bold" />

            <Button
                android:id="@+id/s4_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/s4_newapp"
                 />
        </LinearLayout>

        <TextView
            android:id="@+id/s4_text2"
            android:background="@drawable/s4_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <!-- 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#123456"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:paddingTop="5dip"
            android:gravity="center"
            android:id="@+id/s4_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s4_no1" />
             -->
    </LinearLayout>

    <ListView
        android:id="@+id/s4_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </ListView>

</LinearLayout>
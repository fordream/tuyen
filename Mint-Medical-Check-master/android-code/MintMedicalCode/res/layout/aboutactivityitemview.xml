<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >


    <LinearLayout
        android:id="@+id/aboutactivityitemview_ll1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
      
        android:orientation="vertical" >

        <TextView android:padding="1dp"
            android:id="@+id/aboutactivityitemview_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
             android:padding="1dp"
            android:id="@+id/aboutactivityitemview_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <ImageView
        android:id="@+id/aboutactivityitemview_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_item_img2" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/one.edu.vn.sms"
    xmlns:custom="http://schemas.android.com/apk/res/one.edu.vn.sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/forum_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/newfeeddetail_back"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:padding="@dimen/dimen_16dp"
            android:scaleType="fitXY"
            android:src="@drawable/mback" />

        <ImageView
            android:id="@+id/forum_top_dang"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_16dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <vnp.org.moit.custom.CustomTextView
                android:id="@+id/forum_top_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Tạo chủ đề mới"
                android:textColor="#585858"
                android:textSize="@dimen/dimen_16dp"
                android:textStyle="bold"
                custom:txtCustomType="Semibold" />

            <vnp.org.moit.custom.CustomTextView
                android:id="@+id/forum_top_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Tạo chủ đề mới"
                android:textColor="#585858"
                android:textSize="@dimen/dimen_9dp"
                custom:txtCustomType="Semibold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#e5e5e5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newfeeddetail_controll_send"
        android:layout_below="@+id/forum_top"
        android:divider="@null"
        android:dividerHeight="0px"
        android:listSelector="@android:color/transparent"
        android:orientation="vertical" >

        <LinearLayout
              android:id="@+id/forum_x_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/newfeeddetail_controll_send"
            android:layout_below="@+id/forum_top"
            android:divider="@null"
            android:dividerHeight="0px"
            android:listSelector="@android:color/transparent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/newfeeddetail_controll_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10dp" >

        <vnp.org.moit.custom.CustomEditText
            android:id="@+id/editText1"
            android:layout_width="@dimen/dimen_240dp"
            android:layout_height="@dimen/dimen_35dp"
            android:background="@drawable/newfeeddetail_edt"
            android:hint="@string/vietbinhluan"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:textColor="@android:color/black"
            android:textColorHint="#cacaca"
            android:textSize="@dimen/dimen_16dp"
            app:txtCustomType="Regular" />

        <vnp.org.moit.custom.CustomTextView
            android:id="@+id/newfeeddetail_send"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_35dp"
            android:background="@null"
            android:gravity="center"
            android:text="@string/gui"
            android:textColor="#165aa1"
            android:textSize="@dimen/dimen_12dp"
            android:textStyle="bold"
            custom:txtCustomType="Semibold" />
    </LinearLayout>

</RelativeLayout>
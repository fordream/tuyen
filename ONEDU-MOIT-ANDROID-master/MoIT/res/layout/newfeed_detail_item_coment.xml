<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/one.edu.vn.sms"
    xmlns:custom="http://schemas.android.com/apk/res/one.edu.vn.sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_image_round" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_toRightOf="@+id/avatar"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="236dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toRightOf="@+id/avatar"
                android:orientation="horizontal" >

                <vnp.org.moit.custom.CustomTextView
                    android:id="@+id/newfeed_detail_item_coment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/newfeed_detail_item_coment_time"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="#585858"
                    android:textSize="@dimen/dimen_13dp"
                    android:textStyle="bold"
                    custom:txtCustomType="Semibold" />

                <vnp.org.moit.custom.CustomTextView
                    android:id="@+id/newfeed_detail_item_coment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="TextView"
                    android:textColor="#585858"
                    android:textSize="@dimen/dimen_10dp"
                    custom:txtCustomType="Regular" />
            </RelativeLayout>

            <vnp.org.moit.custom.CustomTextView
                android:id="@+id/newfeed_detail_item_coment_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:lineSpacingExtra="@dimen/dimen_3dp"
                android:text="TextView"
                android:textColor="#a9a9a9"
                android:textSize="@dimen/dimen_10dp"
                custom:txtCustomType="Regular" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/one.edu.vn.sms"
    xmlns:custom="http://schemas.android.com/apk/res/one.edu.vn.sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/forum_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:gravity="center"
        android:orientation="vertical" >

        <vnp.org.moit.custom.CustomTextView
            android:id="@+id/forum_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:text="@string/tatcacactruong"
            android:textColor="#585858"
            android:textSize="@dimen/dimen_16dp"
            android:textStyle="bold"
            custom:txtCustomType="Semibold" />

        <ImageView
            android:layout_width="@dimen/dimen_12dp"
            android:layout_height="@dimen/dimen_5dp"
            android:background="@drawable/fillter" />
    </LinearLayout>

    <vnp.org.moit.custom.CustomTextView
        android:id="@+id/forum_top_create"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:text="Tạo mới"
        android:textColor="#585858"
        android:textSize="@dimen/dimen_14dp"
        custom:txtCustomType="Semibold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forum_top"
        android:divider="@null"
        android:dividerHeight="0px"
        android:listSelector="@android:color/transparent" >

        <ListView
            android:id="@+id/forum_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0px"
            android:listSelector="@android:color/transparent"
            android:scrollbarThumbHorizontal="@drawable/transfer"
            android:scrollbarThumbVertical="@drawable/transfer"
            android:scrollbars="none" />

        <vnp.org.moit.custom.CustomTextView
            android:id="@+id/forum_empty_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:padding="@dimen/dimen_10dp"
            android:text="@string/taotopic"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/dimen_15dp"
            android:visibility="gone"
            custom:txtCustomType="Regular" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/forum_top"
        android:background="#cccccc" />

</RelativeLayout>
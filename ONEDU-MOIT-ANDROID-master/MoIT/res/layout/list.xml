<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/one.edu.vn.sms"
    xmlns:custom="http://schemas.android.com/apk/res/one.edu.vn.sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/forum_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forum_top"
        android:divider="@null"
        android:dividerHeight="0px"
        android:listSelector="@android:color/transparent"
        android:scrollbarThumbHorizontal="@drawable/transfer"
        android:scrollbarThumbVertical="@drawable/transfer"
        android:scrollbars="none" >
    </ListView>

    <vnp.org.moit.custom.CustomTextView
        android:id="@+id/empty_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dimen_5dp"
        android:padding="@dimen/dimen_10dp"
        android:text="Các bác chỉ em làm sao để tắt cái  bảng này ? Mỗi khi em mở mạng lên là nó lại hiện ra."
        android:textColor="#8d8d8d"
        android:textSize="@dimen/dimen_15dp"
        custom:txtCustomType="Regular" />

</RelativeLayout>
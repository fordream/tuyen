<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/one.edu.vn.sms"
    xmlns:custom="http://schemas.android.com/apk/res/one.edu.vn.sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/chooser_main"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:background="@drawable/a_chooser_normal"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="@dimen/dimen_90dp"
                android:layout_height="@dimen/dimen_90dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="@dimen/dimen_1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/avatar_example" />

                <ImageView
                    android:layout_width="@dimen/dimen_90dp"
                    android:layout_height="@dimen/dimen_90dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/x_img" />
            </RelativeLayout>

            <vnp.org.moit.custom.CustomTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:text="Con gai ca"
                android:textColor="#534d4b"
                android:textSize="@dimen/dimen_10dp"
                android:textStyle="bold"
                custom:txtCustomType="Semibold" >
            </vnp.org.moit.custom.CustomTextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/one.edu.vn.sms"
    xmlns:custom="http://schemas.android.com/apk/res/one.edu.vn.sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/forum_topx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/main"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/forum_top"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/newfeeddetail_back"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:padding="@dimen/dimen_16dp"
                android:scaleType="fitXY"
                android:src="@drawable/mback" />

            <vnp.org.moit.custom.CustomTextView
                android:id="@+id/forum_top_dang"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:text="Đăng"
                android:textColor="#165aa1"
                android:textSize="@dimen/dimen_14dp"
                custom:txtCustomType="Semibold" />

            <vnp.org.moit.custom.CustomTextView
                android:id="@+id/forum_top_text"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Tạo chủ đề mới"
                android:textColor="#585858"
                android:textSize="@dimen/dimen_16dp"
                android:textStyle="bold"
                custom:txtCustomType="Semibold" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <vnp.org.moit.custom.CustomEditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Tên chủ đề"
            android:padding="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_4dp"
            android:paddingBottom="@dimen/dimen_4dp"
            android:textColor="@android:color/black"
            android:textColorHint="#c3c3c3"
            android:textSize="@dimen/dimen_14dp"
            app:txtCustomType="Regular" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <vnp.org.moit.custom.CustomEditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top|left"
            android:hint="Nội dung chủ đề"
            android:maxHeight="@dimen/dimen_150dp"
            android:padding="@dimen/dimen_10dp"
            android:textColor="@android:color/black"
            android:textColorHint="#c3c3c3"
            android:textSize="@dimen/dimen_14dp"
            app:txtCustomType="Regular" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_5dp"
                android:src="@drawable/s1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/dimen_12dp"
                    android:layout_height="@dimen/dimen_12dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/s2" />

                <vnp.org.moit.custom.CustomTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dimen_10dp"
                    android:paddingRight="@dimen/dimen_10dp"
                    android:text="Tối đa 6 ảnh"
                    android:textColor="#585858"
                    android:textSize="@dimen/dimen_14dp"
                    custom:txtCustomType="Semibold" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#cccccc" />

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_160dp"
            android:horizontalSpacing="0px"
            android:listSelector="@null"
            android:numColumns="4"
            android:padding="@dimen/dimen_0dp"
            android:verticalSpacing="0px" >
        </GridView>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/forum_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/newfeeddetail_back"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:padding="@dimen/dimen_16dp"
            android:scaleType="fitXY"
            android:src="@drawable/mback" />
        <!-- custom:txtCustomType="Semibold" -->

        <TextView
            android:id="@+id/forum_top_dang"
            style="@style/style_text_semibold"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"
            android:text="Gửi"
            android:textColor="#165aa1"
            android:textSize="@dimen/dimen_16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >
<!--  android:textStyle="bold"
                custom:txtCustomType="Semibold"  -->
            <TextView
                android:id="@+id/forum_top_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Phản hồi tin nhắn 2788"
                android:textColor="#585858"
                android:textSize="@dimen/dimen_16dp"
                style="@style/style_text_semibold"
               />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#e5e5e5" />
    </RelativeLayout>
<!-- app:txtCustomType="Regular" -->
    <EditText
        style="@style/style_text_normal"
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_160dp"
        android:background="@null"
        android:gravity="top"
        android:hint="Nội dung phản hồi"
        android:padding="@dimen/dimen_10dp"
        android:textColor="#585858"
        android:textColorHint="#d4d4d4"
        android:textSize="@dimen/dimen_12dp"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#e5e5e5" />
<!-- custom:txtCustomType="Regular" -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dimen_5dp"
        android:text="* Tin nhắn của bạn sẽ được gửi trực tiếp tới\nemail của nhà trường"
        android:textColor="#737373"
        android:textSize="@dimen/dimen_13dp"
        android:visibility="gone"
        
        style="@style/style_text_semibold" />

</LinearLayout>